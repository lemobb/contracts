{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "addon.attached.v1",
  "type": "object",
  "required": [
    "event",
    "version",
    "timestamp",
    "idempotencyKey",
    "actor",
    "app",
    "addon",
    "billing",
    "context"
  ],
  "properties": {
    "event": {
      "type": "string",
      "const": "addon.attached"
    },
    "version": {
      "type": "string",
      "const": "v1"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "idempotencyKey": {
      "type": "string"
    },
    "actor": {
      "type": "object",
      "required": ["type", "id"],
      "properties": {
        "type": {
          "enum": ["user", "system", "agent"]
        },
        "id": {
          "type": "string"
        }
      }
    },
    "app": {
      "type": "object",
      "required": ["id", "type", "plan"],
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "plan": { "type": "string" }
      }
    },
    "addon": {
      "type": "object",
      "required": ["id", "category", "pricingModel", "effectiveFrom"],
      "properties": {
        "id": { "type": "string" },
        "category": { "type": "string" },
        "pricingModel": {
          "enum": ["subscription", "one_time"]
        },
        "effectiveFrom": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "billing": {
      "type": "object",
      "required": ["currency", "amount"],
      "properties": {
        "currency": { "type": "string" },
        "amount": { "type": "number" },
        "interval": { "type": "string" },
        "oneTime": { "type": "boolean" }
      }
    },
    "context": {
      "type": "object",
      "required": ["source", "environment"],
      "properties": {
        "source": {
          "enum": ["dashboard", "api", "agent"]
        },
        "environment": {
          "enum": ["production", "staging"]
        }
      }
    }
  },
  "additionalProperties": false
}
